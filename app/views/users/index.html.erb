<div class="container">
  <h1 class="my-4">Users</h1>

  <div id="users">
    <% @users.each do |user| %>
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to(user.username, user) %>
            <% if user.locked? %>
              <span class="badge bg-danger">account closed</span>
            <% end %>
          </h5>
          <p class="card-text">
            Has made <%= "#{user.ratings.size}"%> ratings, average rating <%= "#{user.average_rating}" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>