<div id="<%= dom_id brewery %>">
  <h2>
    <%= brewery.name %>
  </h2>

  <p>
    <em>Established in:</em>
    <%= brewery.year %>
  </p>

  <p>
  Beers count:
  <%= @brewery.beers.count %>
  </p>

  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
      </p>
    <% end %>
  </p>

</div>