<p style="color: green"><%= notice %></p>

<%= render @beer %>

<% if @beer.ratings.present? %>
  <p>
    <%= "Beer #{'has' if @beer.ratings.size == 1 || @beer.ratings.empty? || !@beer.ratings} #{'have' if @beer.ratings.size > 1} #{pluralize(@beer.ratings.size, 'rating')}" %> with an average of <%= @beer.average_rating.to_f.round(2) %>
  </p>


<% else %>
  <p>This beer has no ratings yet.</p>
<% end %>


<div>
  <%= link_to "Edit this beer", edit_beer_path(@beer) %> |
  <%= link_to "Back to beers", beers_path %>

  <%= button_to "Destroy this beer", @beer, method: :delete %>
</div>
